{
  "$schema": "https://json.schemastore.org/prettierrc",
  "semi": false,
  "tabWidth": 2,
  "singleQuote": true,
  "printWidth": 100,
  "trailingComma": "none",
  "plugins": ["prettier-plugin-css-order"],
  "cssDeclarationSorterKeepOverrides": true,
  "cssDeclarationSorterCustomOrder": [
    "content",
    "position",
    "z-index",
    "top",
    "right",
    "bottom",
    "left",
    "display",
    "overflow",
    "margin",
    "outline",
    "border",
    "border-radius",
    "padding",
    "width",
    "height",
    "font-family",
    "font-size",
    "line-height",
    "text-align",
    "color",
    "background-color",
    "opacity",
    "transition",
    "translate",
    "cursor",
    "user-select",
    "pointer-events",
    "touch-action"
  ]
}
